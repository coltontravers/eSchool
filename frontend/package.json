{
  "name": "learn-starter",
  "version": "0.1.0",
  "private": true,
  "babelMacros": {
    "twin": {
      "config": "tailwind.config.js",
      "preset": "styled-components",
      "debugProp": true,
      "debugPlugins": false,
      "debug": false
    }
},
  "scripts": {
    "test": "jest --watchAll",
    "test:once": "jest",
    "build": "npm run build:css && next build",
    "dev": "concurrently \"next dev -p 8082\" \"yarn gen-graphql --silent --watch 'src/api/**/*.graphql'\"",
    "start": "concurrently \"next start -p 8080\" \"yarn gen-graphql --silent --watch 'src/api/**/*.graphql'\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build:css": "postcss public/tailwind.css -o public/main.css",
    "watch:css": "postcss public/tailwind.css -o public/main.css",
    "gen-graphql": "graphql-codegen --config codegen.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    ".{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "jest"
    ],
    "*.{md}": [
      "echo 'Checking files with Eslint/Prettier and running unit tests...'",
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "dayjs": "^1.8.33",
    "graphql": "^15.3.0",
    "graphql-request": "^3.1.0",
    "next": "9.5.3",
    "react": "16.13.1",
    "react-circular-progressbar": "^2.0.3",
    "react-dom": "16.13.1",
    "react-query": "^2.23.1",
    "react-swipeable": "^5.5.1",
    "react-virtual": "^2.2.5",
    "styled-components": "^5.1.1",
    "styled-icons": "^10.4.0",
    "tailwindcss": "^1.5.1",
    "twin.macro": "^1.10.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.10",
    "@graphql-codegen/introspection": "^1.18.0",
    "@graphql-codegen/typescript": "1.17.10",
    "@graphql-codegen/typescript-graphql-request": "^2.0.1",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@storybook/addon-actions": "^6.0.5",
    "@storybook/addon-docs": "^6.0.5",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-knobs": "^6.0.5",
    "@storybook/addon-links": "^6.0.5",
    "@storybook/addons": "^6.0.5",
    "@storybook/react": "^6.0.5",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^26.0.5",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-query": "^1.1.2",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mdx": "^1.6.9",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "typescript": "^4.0.3"
  }
}
